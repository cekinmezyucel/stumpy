<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="5 seconds">

	<springProperty scope="context" name="app.name" source="app.name" defaultValue="stumpy-default"/>
	<springProperty scope="context" name="home.dir" source="home.dir" defaultValue="/home/yucelcekinmez"/>

	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
       <layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>
				%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n
			</Pattern>
		</layout>
	</appender>
	<appender name="stumpy-file" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="ch.qos.logback.contrib.json.classic.JsonLayout">
                <timestampFormat>yyyy-MM-dd'T'HH:mm:ss.SSSZ</timestampFormat>
                <timestampFormatTimezoneId>Europe/Istanbul</timestampFormatTimezoneId>
                <appendLineSeparator>true</appendLineSeparator>
            </layout>
        </encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${home.dir}/${app.name}/log/stumpy-service-application.%d{yyyy-MM-dd}.log</fileNamePattern>
				<maxHistory>30</maxHistory>
      			<totalSizeCap>1GB</totalSizeCap>
		</rollingPolicy>
	</appender>
	
	<logger name="com.stumpy" level="debug">
		<appender-ref ref="console" />
		<appender-ref ref="stumpy-file" />
	</logger>
	
</configuration>